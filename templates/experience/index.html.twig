{% extends 'base.html.twig' %}

{% block title %}TalentsManager - Les expériences{% endblock %}

{% block body %}
{# {{ dump(experiences) }} #}
{% for experience in experiences %}
	{{ dump(experience.profile.experiences.owner) }}
{% endfor %}
	<div class="container mt-5 d-flex flex-column align-items-center">
		<h1 class="mt-4 mb-4">Liste des expériences</h1>
		<div class="container d-flex justify-content-center">
			<table class="table table-hover w-75">
				<thead>
					<tr>
						<td>
							<div class="d-flex justify-content-center w-100 text-light">Nom</div>
						</td>
						<td>
							<div class="d-flex justify-content-center w-100 text-light">Actions</div>
						</td>
					</tr>
				</thead>
				<tbody>
					{% for experience in experiences %}
						<tr class="table-light">
							<td class="d-flex justify-content-start w-100 ps-5 fs-5">
								<div>{{ experience.profile.experiences.owner.firstname ~ ' ' ~ experience.profile.experiences.owner.lastname }} - {{ experience.function }} </div>
							</td>
							<td>
								<div class="d-flex justify-content-center w-100">
									<a href="{{ path('modify_experience', {'id': experience.id}) }}" style="margin-right: 30px;">
										<i class="fas fa-pencil-alt" style="color: black;"></i>
									</a>
									<a href="{{ path('delete_experience', {'id': experience.id}) }}" style="margin-right: 30px;">
										<i class="far fa-trash-alt" style="color: black"></i>
									</a>
									<a href="{{ path('add_experience', {'id': experience.profile.experiences.owner.id}) }}">
										<i class="fas fa-plus-circle" style="color: black"></i>
									</a>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="d-flex justify-content-center">
			<button type="button" class="btn btn-primary btn-lg mt-4">
				<a href="{{ path('add_experience') }}" style="color: white; padding: 2px; text-decoration: none;">Ajouter une expérience</a>
			</button>
		</div>
	</div>
{% endblock %}


