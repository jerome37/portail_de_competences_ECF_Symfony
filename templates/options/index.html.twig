                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#documents">Les types de document</a>
                </li>
            </ul>
            <div id="myTabContent" class="tab-content d-flex justify-content-center my-5">
                <div class="w-100 tab-pane fade p-4 show active" id="professions">
                    <div class="container w-75">
                        <div class="d-flex justify-content-center flex-column">
                            <table class="table table-hover w-100">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            <div class="d-flex justify-content-center w-100">Nom</div>
                                        </th>
                                        <th scope="col">
                                            <div class="d-flex justify-content-center w-100">Gérer la profession</div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for profession in professions %}
                                        <tr class="table-light">
                                            <th class="d-flex justify-content-center w-100 fs-5">
                                                <div>{{ profession.name }}</div>
                                            </th>
                                            <td>
                                                <div class="d-flex justify-content-center w-100">
                                                    <a href="{{ path('modify_options', {'id': profession.id}) }}" style="margin-right: 30px;">
                                                        <i class="fas fa-pencil-alt" style="color: black;"></i>
                                                    </a>
                                                    <a href="{{ path('delete_options', {'id': profession.id}) }}">
                                                        <i class="far fa-trash-alt" style="color: black"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-primary btn-lg mt-4">
                                    <a href="{{ path('add_options') }}" style="color: white; padding: 2px; text-decoration: none;">Ajouter un niveau</a>
                                </button>
                            </div>
                        </div>
