{% extends 'base.html.twig' %}

{% block title %}Hello OptionsController!{% endblock %}

{% block body %}
    <div class="container w-75 mt-5">
        <div class="container">

            <div class="container w-75 d-flex justify-content-center my-4">
                <h1 class="">Les options</h1>
            </div>

            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#professions">Les professions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#statii">Les statuts</a>
                </li>
